        <script>

            $(document).ready(function () {

                $('#checking').hide();

                $('#chk').click(function () {

                    var s = $('#show').val();
                    $('#checking').show();
                    $.getJSON("/Home/search?show=" + s, function (data) {
                        $('#checking').hide();
                        if (data != null) {
                            $('#ress').text("You Have Searched This Product");
                            $('#res').text("Name:       "+data.Name);
                            $('#re').text("Price:       "+data.Price);
                            $('#r').text("Description:      "+data.Description);
                        }
                        else {
                            $('#res').text("Sorry...  This Product Does Not Exist in Store!!!");
                        }
                    });
                });
            });

        </script>

