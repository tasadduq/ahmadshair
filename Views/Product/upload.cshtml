@{
    ViewBag.Title = "upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
<form action="/Product/FileUpload" method="post" enctype="multipart/form-data" >
    <br />
    Select Category:
    <select name="Category" >
        <option selected> Mobile Phone</option>
        <option> Laptop</option>
        <option> Tablet</option>
        <option> TV</option>
        <option> Camera</option>
    </select><br /><br />

    Name<br />
    <input type="text" name="n1" class="form-control" /> <br />
    Price<br />
    <input type="text" name="p1" class="form-control" /> <br />  
    Description<br />
    <input type="text" name="d1" class="form-control" /> <br />
    Image<br />
    <input type="file" name="file" id="file" style="width: 100%;" class="form-control" />
    <br />
    <input type="submit" value="Upload" class="btn btn-info pull-right" />
</form>
        </div>
    </div>














